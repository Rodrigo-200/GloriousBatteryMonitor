{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## 📝 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## 🔧 Maintenance",
      "labels": ["maintenance", "chore"]
    },
    {
      "title": "## 🔄 Other Changes",
      "labels": []
    }
  ],
  "template": "#{{CHANGELOG}}\n\n## 📊 Statistics\n**Full Changelog**: #{{RELEASE_DIFF}}\n\n## 👥 Contributors\n#{{CONTRIBUTORS}}",
  "pr_template": "- #{{TITLE}} by @#{{AUTHOR}} in ##{{NUMBER}}",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature)(\\(.+\\))?:",
      "target": "feature"
    },
    {
      "pattern": "^(fix|bugfix)(\\(.+\\))?:",
      "target": "bug"
    },
    {
      "pattern": "^docs?(\\(.+\\))?:",
      "target": "documentation"
    },
    {
      "pattern": "^chore(\\(.+\\))?:",
      "target": "maintenance"
    }
  ]
}
